<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.om.mygame">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".PracticeHomePage" />
        <activity android:name=".VisualAndAuditoryPage" />
        <activity android:name="practice.VisualAndAuditoryPage" />
        <activity android:name="comprehensive.VisualAndAuditoryPage" />
        <activity android:name=".VisualOnlyWithDistraction" />
        <activity android:name="practice.VisualOnlyWithDistraction" />
        <activity android:name="comprehensive.VisualOnlyWithDistraction" />
        <activity
            android:name=".HomePage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_home_page"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".TrialsWODistraction"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_trials_wodistraction"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="practice.TrialsWODistraction"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_trials_wodistraction"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="comprehensive.TrialsWODistraction"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_trials_wodistraction"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="authentication.Authenticate"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TrialsWDistraction"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_trials_wdistraction"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="practice.TrialsWDistraction"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_trials_wdistraction"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="comprehensive.TrialsWDistraction"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_trials_wdistraction"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="authentication.LogIn"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_log_in"
            android:parentActivityName="authentication.Authenticate"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="authentication.Authenticate" />
        </activity>
        <activity
            android:name="authentication.Register"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_register"
            android:parentActivityName="authentication.Authenticate"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="authentication.Authenticate" />
        </activity>
        <activity
            android:name=".Network"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_network"
            android:parentActivityName="authentication.Authenticate"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="authentication.Authenticate" />
        </activity>
        <activity
            android:name=".ForgotPassword"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_forgot_password"
            android:parentActivityName="authentication.LogIn"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="authentication.LogIn" />
        </activity>
        <activity
            android:name=".ResetPassword"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_reset_password"
            android:parentActivityName=".ForgotPassword"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="authentication.LogIn" />
        </activity>
    </application>

</manifest>