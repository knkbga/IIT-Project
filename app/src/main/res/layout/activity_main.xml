<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.om.mygame.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#F00"
        android:id="@+id/instruction_text_view"
        android:text="Please select the type of game that you want to play from the following options!" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Visual And Auditory"
        android:id="@+id/visual_and_auditory"
        android:onClick="visualAndAuditory"
        android:layout_gravity="center_vertical" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Visual Only"
        android:id="@+id/visual_only"
        android:onClick="visualOnly"
        android:layout_gravity="center_vertical" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Visual Only with Distraction"
        android:id="@+id/visual_only_with_Distraction"
        android:onClick="visualOnlyWithDistraction"
        android:layout_gravity="center_vertical" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Auditory Only "
        android:id="@+id/auditory_only"
        android:onClick="auditoryOnly"
        android:layout_gravity="center_vertical" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Auditory Only with Distraction "
        android:id="@+id/auditory_only_with_distraction"
        android:onClick="auditoryOnlyWithDistraction"
        android:layout_gravity="center_vertical" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Trail Making Game"
        android:id="@+id/trail_making"
        android:onClick="trailMaking"
        android:layout_gravity="center_vertical" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Sanskrit Games"
        android:id="@+id/sanskrit_game"
        android:onClick="sanskritGame"
        android:layout_gravity="center_vertical" />

    <!--
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:id="@+id/edit_message"
        android:layout_gravity="center_horizontal"
        android:hint="Trial Output here" />
                                         -->

</LinearLayout>
