<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:background="#ffff"
    tools:context="com.example.om.mygame.TrialsWODistraction">


    <RelativeLayout
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:textSize="14dp"
            android:id="@+id/instruction_title"
            android:textAlignment="center"
            android:textColor="#bababa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Before you start here are few things to keep in mind."/>


        <RelativeLayout
            android:layout_below="@+id/instruction_title"
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingBottom="15dp"
                android:id="@+id/instruction_1"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:textColor="#000000"
                    android:paddingLeft="10dp"
                    android:text="@string/instruction_wo_trial_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="15dp"
                android:layout_below="@+id/instruction_1"
                android:id="@+id/instruction_2"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:textColor="#000000"
                    android:paddingLeft="10dp"
                    android:text="@string/instruction_wo_trial_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="15dp"
                android:id="@+id/instruction_3"
                android:layout_below="@+id/instruction_2"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:text="@string/instruction_wo_trial_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="15dp"
                android:id="@+id/instruction_4"
                android:layout_below="@id/instruction_3"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:text="@string/instruction_wo_trial_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

    <Button
        android:textSize="20dp"
        android:padding="17dp"
        android:textColor="#ffff"
        android:background="#9ddb1d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start This Test"
        android:id="@+id/StartTestWO"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>