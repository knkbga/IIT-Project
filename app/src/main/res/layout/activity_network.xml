<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="com.example.om.mygame.Network">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout6">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_internet"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <RadioButton
                        android:layout_marginTop="105dp"
                        android:id="@+id/radio_localhost"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </RadioGroup>
            </RelativeLayout>
            <RelativeLayout
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/InternetLabel"
                    android:textSize="20dp"
                    android:text="Check this if you have internet connection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="50dp"
                    android:id="@+id/localhostLabel"
                    android:textSize="20dp"
                    android:text="Check this if you don't have internet connection."
                    android:layout_below="@+id/InternetLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:text="192.168.12.1:8080"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/LocalhostAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/localhostLabel"
                    android:hint="Enter localhost address here"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="111dp"
                    android:layout_marginStart="111dp"
                    tools:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/ProceedButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:background="#1e90ff"
            android:text="Proceed"
            android:textColor="#ffff" />
    </RelativeLayout>

</ScrollView>
