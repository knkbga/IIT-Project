<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/seperator1"
        android:layout_below="@+id/RANKINGTEXT_Layout"
        android:background="@color/theme_black"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/RANKS_1"
        android:padding="7dp"
        android:layout_below="@+id/seperator1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/scorer_rank"
            android:textColor="@color/theme_grey"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_weight="4"
            android:text="#Rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/scorer_name"
            android:textColor="@color/theme_grey"
            android:textSize="20dp"
            android:textAlignment="textStart"
            android:layout_weight="3"
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start" />
        <TextView
            android:paddingRight="10dp"
            android:id="@+id/scorer_score"
            android:textColor="@color/theme_grey"
            android:textSize="20dp"
            android:textAlignment="textEnd"
            android:layout_weight="3.5"
            android:text="Score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end" />
    </LinearLayout>

</RelativeLayout>