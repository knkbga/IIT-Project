<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_white"
    tools:context="com.example.om.mygame.Sessions">


    <RelativeLayout
        android:id="@+id/sets_instructions_label"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:id="@+id/set_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp">
            <TextView
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                android:textColor="#f96d00"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:textSize="22dp"
                android:text="Four types of games"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/game_1_title"
            android:layout_below="@+id/set_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:textColor="@color/theme_grey"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:textSize="17dp"
                android:text="(i) Visual with Audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="10dp"
            android:id="@+id/game_2_title"
            android:layout_below="@+id/game_1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:textColor="@color/theme_grey"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:textSize="17dp"
                android:text="(ii) Audio Only"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:paddingBottom="10dp"
            android:id="@+id/game_3_title"
            android:layout_below="@+id/game_2_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:textColor="@color/theme_grey"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:textSize="17dp"
                android:text="(iii) Visual Only"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:paddingBottom="10dp"
            android:id="@+id/game_4_title"
            android:layout_below="@+id/game_3_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:textColor="@color/theme_grey"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:textSize="17dp"
                android:text="(iv) Visual with Distraction"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_4_title"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/proceed_button"
        android:id="@+id/set_number_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:text="Now starting set : 1"
        android:textAlignment="center"
        android:textColor="@color/theme_orange"
        android:textSize="25dp" />

    <Button
        android:id="@+id/proceed_button"
        android:textSize="18dp"
        android:text="PROCEED"
        android:textColor="@color/theme_white"
        android:background="@color/theme_orange"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
