<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:background="#ffff"
    tools:context="com.example.om.mygame.HomePage">


    <RelativeLayout
        android:layout_marginTop="-40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <Button
                android:textSize="20dp"
                android:layout_margin="20dp"
                android:padding="30dp"
                android:textColor="#ffff"
                android:background="#4aa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPREHENSIVE TEST"
                android:id="@+id/ComprehensiveTestButton"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <Button
                android:textSize="20dp"
                android:layout_margin="20dp"
                android:textColor="#ffff"
                android:padding="30dp"
                android:background="#4aa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPECIFIC MODULES"
                android:id="@+id/SpecificTestButton"
                android:layout_below="@+id/ComprehensiveTestButton"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</RelativeLayout>
